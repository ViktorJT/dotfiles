#!/bin/bash
set -e

echo "Installing packages for environment: {{ .chezmoidata.environments.default }}"

{% if .chezmoidata.environments[.chezmoidata.environments.default].packages %}
  {% for package in .chezmoidata.environments[.chezmoidata.environments.default].packages %}
    echo "Installing {{ package }}..."
    {% if .chezmoidata.environments.default == "macos" %}
      brew install {{ package }}
    {% else %}
      sudo apt-get install -y {{ package }}
    {% endif %}
  {% endfor %}
{% endif %}
